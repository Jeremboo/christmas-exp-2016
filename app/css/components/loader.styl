.loader

  &-title
    opacity 0
    font-size 0.5em
    letter-spacing 3px

    &.TextAnimation
      opacity 1

  &-progress
    position relative
    width 100%
    height 2px
    margin-top: 10px;

    #progress, &:before
      content: ''
      position: absolute;
      top: 0
      left: 0
      width: 100%
      height: 100%;
      background-color: whiteColor
      border-radius: 2px;

    #progress
      width: 0;
      transition: 0.2s;

    &:before
      opacity: 0

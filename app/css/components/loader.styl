.loader
  verticalAlign()

  &-title
    opacity 0
    font-size 0.5em
    letter-spacing 3px
    text-align: center;

    &.TextAnimation
      opacity 1

  &-progress
    position relative
    display: flex;
    justify-content: center;
    width 100%
    height 2px
    margin-top 10px

    #progress, &:before
      content ''
      verticalAlign()
      width 100%
      height 100%
      background-color whiteColor
      border-radius 2px

    #progress
      width: 0;
      transition: 0.2s;

    &:before
      opacity: 0

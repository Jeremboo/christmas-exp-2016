@import './_styleguide/normalize'
@import './_styleguide/mixins'
@import './_styleguide/variables'

#texture-tool-wrapper
  display none

.hud
  width rem( 50 )
  display flex
  flex-direction column
  position absolute
  top rem( 20 )
  left rem( 20 )

.candy
  width 100%
  margin-bottom rem( 30 )

  &--image
    width 100%
    display block
    border solid 1px #ecf0f1
    border-radius 50%
    padding rem( 10 )
    box-sizing border-box

  &--counter
    text-align center
    color #ecf0f1
    margin 0
    padding-top rem( 10 )

.sound
  width rem( 30 )
  height rem( 30 )
  background url( '../assets/images/sound.png' ) no-repeat center center
  background-size contain
  border none
  appearance none
  outline none
  position absolute
  bottom rem( 20 )
  right rem( 20 )
